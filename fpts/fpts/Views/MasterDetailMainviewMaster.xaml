    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="top">
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*" />

                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Ten}" TextColor="Green" FontAttributes="Bold" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <DataTemplate x:Key="bot">
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.4*" />

                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding Ten}" TextColor="Green" FontAttributes="Bold" />
                    </Grid>
                </ViewCell>
            </DataTemplate>
            <local:Selected x:Key="selected"
                Top="{StaticResource top}"
                Mid="{StaticResource bot}"
                 />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Margin="20">
        <Label Text="ListView with a DataTemplateSelector" FontAttributes="Bold" HorizontalOptions="Center" />
        <ListView x:Name="listView" Margin="0,20,0,0" ItemTemplate="{StaticResource selected}" ItemsSource="{Binding MMenus}"/>
    </StackLayout>
</ContentPage>