            <Style x:Key="labelStyleGia" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"  />
                
                <Setter Property="FontSize" Value="17" />
            </Style>
            <Style x:Key="labelStyleThaydoi" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
                
                <Setter Property="FontSize" Value="15" />
            </Style>
            <Style x:Key="labelStyleTien" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand" />
